            android:name="MAPBOX_ACCESS_TOKEN"
            android:value="pk.eyJ1IjoiZWRlbGVvbjExIiwiYSI6ImNtaDFuZmVzdjB1d2FqMHExamJ5ZHc1YmgifQ.-K9QS-CqYNrYeoyN9-aGcg" />

        <activity
            android:name=".view.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
